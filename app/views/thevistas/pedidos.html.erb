<div class="container mt-5">
  <h1>Tabla de Pedidos</h1>
  <div class="col">
    <a href="/make" class="btn btn-primary mb-3">Hacer Pedido</a>
  </div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>No. pedido</th>
        <th>Receta</th>
        <th>Estado</th>
        <th>Fecha de pedido</th>
      </tr>
    </thead>
    <tbody>
      <% @json_response.each do |key, value| %>
        <tr>
          <td><%= key %></td>
          <td><%= value['nombre'] %></td>
          <td><%= value['estado'] %></td>
          <td><%= value['pedido_at'] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
</div>