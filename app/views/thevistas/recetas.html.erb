<div class="container mt-5">
  <h1>Tabla de Alimentos</h1>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Ingredientes</th>
        <th>Cantidades</th>
      </tr>
    </thead>
    <tbody>
      <% @json_response.each do |key, value| %>
        <tr>
          <td><%= value['nombre'] %></td>
          <td><%= value['ingredientes'].join(', ') %></td>
          <td><%= value['cantidades'].join(', ') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>