<div class="container mt-5">
  <h1>Tabla de Ingredientes</h1>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Id</th>
        <th>Cantidad disponible</th>
      </tr>
    </thead>
    <tbody>
      <% @json_response.each do |key, value| %>
        <tr>
          <td><%= value['nombre'] %></td>
          <td><%= value['id'] %></td>
          <td><%= value['cantidad'] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>